<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/iv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_c" />

    <ImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="@dimen/post_icons_size"
        android:layout_height="@dimen/post_icons_size"
        android:layout_margin="@dimen/post_icons_margin"
        app:layout_constraintStart_toStartOf="@id/iv_post"
        app:layout_constraintBottom_toTopOf="@id/iv_post"
        app:srcCompat="@drawable/img_circle_8" />

    <TextView
        android:id="@+id/tv_user_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/post_icons_size"
        android:layout_margin="@dimen/post_icons_margin"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="android"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_user_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_user_icon" />

    <ImageView
        android:id="@+id/iv_options"
        android:layout_width="@dimen/post_icons_size"
        android:layout_height="@dimen/post_icons_size"
        android:layout_margin="@dimen/post_icons_margin"
        app:layout_constraintEnd_toEndOf="@id/iv_post"
        app:layout_constraintBottom_toTopOf="@id/iv_post"
        app:srcCompat="@drawable/ic_more" />

    <ImageView
        android:id="@+id/iv_icon_like"
        android:layout_width="@dimen/post_icons_size"
        android:layout_height="@dimen/post_icons_size"
        android:layout_margin="@dimen/post_icons_margin"
        app:layout_constraintStart_toStartOf="@id/iv_post"
        app:layout_constraintTop_toBottomOf="@+id/iv_post"
        app:srcCompat="@drawable/ic_favorite" />

    <ImageView
        android:id="@+id/iv_icon_send"
        android:layout_width="@dimen/post_icons_size"
        android:layout_height="@dimen/post_icons_size"
        android:layout_margin="@dimen/post_icons_margin"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon_coment"
        app:layout_constraintStart_toEndOf="@+id/iv_icon_coment"
        app:layout_constraintTop_toTopOf="@+id/iv_icon_coment"
        app:srcCompat="@drawable/ic_send" />

    <ImageView
        android:id="@+id/iv_icon_coment"
        android:layout_width="@dimen/post_icons_size"
        android:layout_height="@dimen/post_icons_size"
        android:layout_margin="@dimen/post_icons_margin"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon_like"
        app:layout_constraintStart_toEndOf="@+id/iv_icon_like"
        app:layout_constraintTop_toTopOf="@+id/iv_icon_like"
        app:srcCompat="@drawable/ic_comment" />
</androidx.constraintlayout.widget.ConstraintLayout>